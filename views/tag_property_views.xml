<?xml version="1.0"?>
<odoo>
    <record id="tag_model_action" model="ir.actions.act_window">
        <field name="name">Tags</field>
        <field name="res_model">tag_model</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="tag_model_tree_view" model="ir.ui.view">
        <field name="name">tag_model.tree</field>
        <field name="model">tag_model</field>
        <field name="arch" type="xml">
            <tree string="Tests">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="tag_model_view" model="ir.ui.view">
        <field name="name">tag_model.form</field>
        <field name="model">tag_model</field>
        <field name="arch" type="xml">
            <form string="test">
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                </sheet>
            </form>
        </field>
    </record>
</odoo>